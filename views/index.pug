extends layout

block content
  header 
    h1= 'Mini Message Board'
    p= 'What is on your mind, friend?'
  main
    .button-container
      a(href=`http://localhost:${process.env.PORT || 3000}/new`): button.compose= "Click and leave a message"
    each message in messages 
      section.message-card 
        h2= message.title
        p.description= message.description
        footer 
          p.username= message.username
          p.date= message.date